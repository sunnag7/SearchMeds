<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rel_layout_chat_contacts"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:cardView="http://schemas.android.com/apk/res-auto"
        cardView:cardCornerRadius = "6dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        >

        <!--Vendors-->

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="5dp"
            android:id="@+id/chatContactImageView"
            android:src="@drawable/customer"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mr. XYZ"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:padding="5dp"
            android:id="@+id/nameTextView"
            android:textColor="@color/textColor"
            android:layout_toRightOf="@+id/chatContactImageView"
            android:layout_toEndOf="@+id/chatContactImageView" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:padding="5dp"
            android:id="@+id/TextvAddress"
            android:layout_below="@+id/nameTextView"
            android:textColor="@color/textColor"
            android:layout_toEndOf="@+id/chatContactImageView"
            android:layout_toRightOf="@+id/chatContactImageView"
            android:layout_marginTop="3dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vendor Type"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:padding="5dp"
            android:visibility="invisible"
            android:id="@+id/txtV_vendorType"
            android:layout_below="@+id/TextvAddress"
            android:textColor="@color/textColor"
            android:layout_toEndOf="@+id/chatContactImageView"
            android:layout_toRightOf="@+id/chatContactImageView"
            android:layout_marginTop="3dp"/>

    </RelativeLayout>


   </android.support.v7.widget.CardView>

</RelativeLayout>
