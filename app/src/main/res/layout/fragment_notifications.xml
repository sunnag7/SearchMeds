<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="info.androidhive.searchmed.activity.NotificationsFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvNotifications"
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rel_noNotifications"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageV_noNotifications"
            android:src="@drawable/notificatn"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="217dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No New Notifications!"
            android:textSize="18dp"
            android:textStyle="bold"
            android:id="@+id/txtV_noNotification"
            android:textColor="@color/billNo"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/imageV_noNotifications"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</FrameLayout>
