<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/windowBackground"
    android:descendantFocusability="beforeDescendants"
    tools:showIn="@layout/activity_order__options_"
    android:focusableInTouchMode="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="info.androidhive.materialdesign.activity.Test">

    <ScrollView
        android:id="@+id/ScrollView"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:layout_below="@+id/view"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:padding="25dp" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:id="@+id/Txt_Options"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:text="Options:"
                android:textSize="30dp"
                android:textStyle="bold"
                android:typeface="monospace" />

            <Button
                android:id="@+id/btn_Prescription"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Txt_Options"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp"
                android:background="@color/colorPrimary"
                android:textColor="@color/white_"
                android:text="Prescription"
                android:padding="10dp"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn_Cosmetics"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_Prescription"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp"
                android:text="Cosmetics And Others"
                android:background="@color/colorPrimary"
                android:textColor="@color/white_"
                android:textSize="20dp"
                android:padding="10dp"/>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
